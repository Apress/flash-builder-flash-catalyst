<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx">
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		s|Button.myStyleName {
			baseColor: #333333;
			color: #CCCCCC;
			focusColor: #666666;
			fontFamily: Verdana;
			fontSize: 14;
			fontStyle: italic;
		}
		
		s|Label.myStyleName {
			color: #000099;
			fontWeight: bold;
		}			
	</fx:Style>
	
	<s:Group horizontalCenter="0" verticalCenter="0">
		<s:layout>
			<s:VerticalLayout/>
		</s:layout>
		<s:Button styleName="myStyleName" label="This is a styled button"/>
		<s:Button label="This is a button with default styling"/>
		<s:Label styleName="myStyleName" text="This is a styled label"/>
	</s:Group>
</s:Application>